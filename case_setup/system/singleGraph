FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points

    top
    {
        type    lineCell;
        axis    xyz;
        start   (-16 0 0);
        end     (-16 -4 0);
    }

    bottom
    {
        type    lineCell;
        axis    xyz;
        start   (28.97056275 -15.3137085 0);
        end     (28.97056275 -19.3137085 0);
    }
);

fields          ( p U );


